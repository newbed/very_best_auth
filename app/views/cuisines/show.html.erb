<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cuisine #<%= @cuisine.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @cuisine.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/cuisines" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/cuisines/<%= @cuisine.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_cuisine/<%= @cuisine.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Create Dish</h3>
      </div>
      <div class="panel-body">
        <form action="/create_dish" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
            <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
            </div>
          </div>

          <input type="hidden" id="cuisine_id" name="cuisine_id" value="<%= @cuisine.id %>">

<!--           Label and input for cuisine_id
          <div class="form-group">
            <label for="cuisine_id" class="col-sm-2 control-label">
              Cuisine
            </label>
            <div class="col-sm-10">
              <%= select_tag(:cuisine_id, options_from_collection_for_select(Cuisine.all, :id, :name, @cuisine.id), :class => "form-control") %>
            </div>
          </div> -->

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Dish
              </button>
              or
              <a href="/dishes">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>



    <ul class="list-group">
      <% @cuisine.dishes.each do |dish|%>
      <li class="list-group-item">
        <a href="/dishes/<%= dish.id %>"><%= dish.name %></a>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- End responsive panel example -->
